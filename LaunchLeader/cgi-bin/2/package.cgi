#!/usr/bin/perl

use Launchleader;
use strict;

my $stage = $Launchleader::_query->param('stage') || 0;
my $mode = $Launchleader::_query->param('mode') || "view";

&Launchleader::do_check_login();
&Launchleader::select_account($Launchleader::uid);

&Launchleader::read_package();
&Launchleader::select_package($Launchleader::package->{'package_id'}) if($Launchleader::package->{'package_id'});
&Launchleader::read_package() if($stage>=2 && $mode eq "edit");


if($stage==0) #View mode
{
   print $Launchleader::_query->header();
   print &Launchleader::html_header($Launchleader::HFILE);
   print html_stage0();
   print &Launchleader::html_footer($Launchleader::HFILE);
}
elsif($stage == 1 || !verify_stage1()) 
{
   print $Launchleader::_query->header();
   print &Launchleader::html_header($Launchleader::HFILE);
   print html_stage1();
   print &Launchleader::html_footer($Launchleader::HFILE);
}
elsif($stage==2)
{	
   print $Launchleader::_query->header();
   print &Launchleader::html_header($Launchleader::HFILE);
   print html_stage2();
   print &Launchleader::html_footer($Launchleader::HFILE);

}
elsif($stage==3)
{
	if($mode eq "delete")
	{
	   &Launchleader::delete_package($Launchleader::package->{'package_id'});
	}
	else
	{
	   if( !$Launchleader::package->{'package_id'})
	   {
		&Launchleader::insert_package();
	   }
	   else
	   {
		&Launchleader::update_package();
	   }
	}



   print "Location: $Launchleader::PACKAGES_CGI?$Launchleader::HSTR&stage=2\n\n";
}

&Launchleader::clean_exit();

