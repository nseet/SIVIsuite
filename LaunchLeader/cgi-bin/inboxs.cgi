sub get_page_str
{
if(!$limit)
{
   return "";
}

my $str;

my $total = &Launchh::count_table('inbox',$WHERE);
my $total_pages = int($total/$limit) + 1;
my $cur_page = int($offset/$limit) + 1;
my $page_min = $offset + 1;
my $page_max = $offset + $limit;

if($cur_page > 1)
{
   my $previous_offset = $offset - $limit;
   if($previous_offset < 0)
   {
	$previous_offset = 0;
   }

   $str .= "[ <A HREF=\"$Launchh::INBOXS_CGI?stage=2&limit=$limit&offset=$previous_offset&order_by=$order_by&order_dir=$order_dir&$Launchh::HSTR&WHERE=$WHERE_ESC\">Previous Page</A> ]";
}

# $str .= " Now viewing $page_min-$page_max of $total (Page $cur_page of $total_pages) ";

if($total_pages > 1)
{
$str .= " [";
for(my $page = 1; $page <= $total_pages; $page += int($total_pages/10 + 1))
{
   my $page_offset = ($page * $limit) - $limit;
   my $ob;
   my $cb;
   if($page == $cur_page)
   {
	$ob = "<B>";
	$cb = "</B>";
   }
   $str .= " <A HREF=\"$Launchh::INBOXS_CGI?stage=2&limit=$limit&offset=$page_offset&order_by=$order_by&order_dir=$order_dir&$Launchh::HSTR&WHERE=$WHERE_ESC\">$ob$page$cb</A> |";
}
chop($str);
$str .= "] ";
}

if($cur_page < $total_pages)
{
   my $next_offset = $offset + $limit;
   if($next_offset < 0)
   {
	$next_offset = 0;
   }

   $str .= "[ <A HREF=\"$Launchh::INBOXS_CGI?stage=2&limit=$limit&offset=$next_offset&order_by=$order_by&order_dir=$order_dir&$Launchh::HSTR&WHERE=$WHERE_ESC\">Next Page</A> ]";
}

return $str;
}

sub get_where
{
my $WHERE = "WHERE 1=1 ";

if($Launchh::inbox->{'inbox_id'})
{
   $WHERE .= "AND inbox_id = $Launchh::inbox->{'inbox_id'} ";
}  
if($Launchh::inbox->{'account_to'})
{
   $WHERE .= "AND account_to = $Launchh::inbox->{'account_to'} ";
}  
if($Launchh::inbox->{'account_from'})
{
   $WHERE .= "AND account_from = $Launchh::inbox->{'account_from'} ";
}  
if($Launchh::inbox->{'inbox_name'})
{
	$Launchh::inbox->{'inbox_name'} .= "%";
        $Launchh::inbox->{'inbox_name'} = $Launchh::dbh->quote($Launchh::inbox->{'inbox_name'});
   $WHERE .= "AND inbox_name LIKE $Launchh::inbox->{'inbox_name'} ";
}  
if($Launchh::inbox->{'inbox_desc'})
{
	$Launchh::inbox->{'inbox_desc'} .= "%";
        $Launchh::inbox->{'inbox_desc'} = $Launchh::dbh->quote($Launchh::inbox->{'inbox_desc'});
   $WHERE .= "AND inbox_desc LIKE $Launchh::inbox->{'inbox_desc'} ";
}  
if($Launchh::inbox->{'inbox_note'})
{
	$Launchh::inbox->{'inbox_note'} .= "%";
        $Launchh::inbox->{'inbox_note'} = $Launchh::dbh->quote($Launchh::inbox->{'inbox_note'});
   $WHERE .= "AND inbox_note LIKE $Launchh::inbox->{'inbox_note'} ";
}  
if($Launchh::inbox->{'inbox_date'})
{
   $WHERE .= "AND inbox_date = $Launchh::inbox->{'inbox_date'} ";
}  
if($Launchh::inbox->{'inbox_type'})
{
   $WHERE .= "AND inbox_type = $Launchh::inbox->{'inbox_type'} ";
}  
if($Launchh::inbox->{'inbox_status'})
{
   $WHERE .= "AND inbox_status = $Launchh::inbox->{'inbox_status'} ";
}  


return $WHERE;
}
